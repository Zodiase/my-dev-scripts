{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "lib",
		"moduleResolution": "Node",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
        "src/**/*.ts"
    ],
    "exclude": [
    	"src/**/*.spec.ts"
    ]
}
