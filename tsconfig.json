{
    "compilerOptions": {
        "lib": ["es2017"],
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "outDir": "lib",
        "paths": {
            "~/*": ["./*"] // resolve all modules prefixed with `~/` from `src` directory
        },
        "charset": "utf8",
        "newLine": "LF",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
